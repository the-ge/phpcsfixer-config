{
    "name": "thege/thege-phpcsfixer-config",
    "description": "The Ge's PHP CS Fixer configuration",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Gabriel Tenita",
            "email": "the.ge@tenita.eu"
        }
    ],
    "require": {
        "php": "^7.4|^8.0|^8.1|^8.2|^8.3|^8.4|^8.5",
        "friendsofphp/php-cs-fixer": "^3",
        "kubawerlos/php-cs-fixer-custom-fixers": "dev-main"
    },
    "require-dev": {
        "php-parallel-lint/php-console-highlighter": "^1.0",
        "php-parallel-lint/php-parallel-lint": "^1.4",
        "squizlabs/php_codesniffer": "^4.0",
        "phpcompatibility/php-compatibility": "^10.0@alpha",
        "slevomat/coding-standard": "^8.26",
        "phpstan/phpstan": "^2.0"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "boot":       "composer install --optimize-autoloader",
        "lint":       "vendor/bin/parallel-lint src",
        "compat":     "vendor/bin/phpcs -p src --standard=PHPCompatibility",
        "stan":       "vendor/bin/phpstan analyse --configuration=.dev/phpstan.neon",
        "stan:fresh": "vendor/bin/phpstan clear-result-cache && vendor/bin/phpstan analyse --configuration=.dev/phpstan.neon",
        "fix:try":    "vendor/bin/php-cs-fixer fix src --config=src/php-cs-fixer.dist.php --show-progress=dots --dry-run --diff",
        "fix":        "vendor/bin/php-cs-fixer fix src --config=src/php-cs-fixer.dist.php --show-progress=dots",
        "deploy":     "composer install --no-dev --classmap-authoritative"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
